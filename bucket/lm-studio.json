{
   "$schema": "https://raw.githubusercontent.com/lukesampson/scoop/master/schema.json",
   "version": "0.4.6-1",
   "description": "Run local LLMs like gpt-oss, Qwen3, Gemma3, DeepSeek and many more on your computer, privately and for free.",
   "homepage": "https://lmstudio.ai",
   "license": "MIT",
   "architecture": {
      "64bit": {
         "url": "https://installers.lmstudio.ai/win32/x64/0.4.6-1/LM-Studio-0.4.6-1-x64.exe#/dl.exe",
         "hash": "4c4e6c9738bca9904e5e21cb16258672bd7eba7680cb185d68aa5bcbb05f1b94",
         "installer": {
            "script": [
               "Expand-7zipArchive -Path \"$dir\\dl.exe\" -DestinationPath \"$dir\\_tmp\" -Removal",
               "Expand-7zipArchive -Path \"$dir\\_tmp\\`$PLUGINSDIR\\app-64.7z\" -DestinationPath \"$dir\"",
               "Remove-Item \"$dir\\_tmp\" -Force -Recurse"
            ]
         }
      }
   },
   "shortcuts": [
      [
         "LM Studio.exe",
         "LM Studio"
      ]
   ],
   "checkver": {
      "script": "(Invoke-WebRequest -Uri https://lmstudio.ai/download/latest/win32/x64 -MaximumRedirection 0 -SkipHttpErrorCheck -ErrorAction Ignore).Headers.Location",
      "regex": "LM-Studio-([\\d\\.]+-\\d+)-x64.exe"
   },
   "autoupdate": {
      "architecture": {
         "64bit": {
            "url": "https://installers.lmstudio.ai/win32/x64/$version/LM-Studio-$version-x64.exe#/dl.exe"
         }
      }
   }
}
