    "installer": {
        "script": [
            "if (-not (is_admin)) { error 'This package requires admin privileges to install'; break }",
            "Invoke-ExternalCommand msiexec -ArgumentList @(",
            "    '/i',",
            "    \"$dir\\dl.msi_\",",
            "    '/qn',",
            "    '/norestart',",
            "    \"TARGETDIR=\"\"$dir\"\"\",",
            "    'ARPSYSTEMCOMPONENT=0',",
            "    'MSIFASTINSTALL=7'",
            ") -RunAs > $null"
        ]
    },
    "uninstaller": {
