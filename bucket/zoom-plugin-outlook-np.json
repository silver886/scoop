            "Invoke-ExternalCommand msiexec -ArgumentList @(",
            "    '/x',",
            "    \"$dir\\dl.msi_\",",
            "    '/qn',",
            "    '/norestart',",
            "    \"TARGETDIR=\"\"$dir\"\"\",",
            "    'ARPSYSTEMCOMPONENT=0',",
            "    'MSIFASTINSTALL=7'",
            ") -RunAs > $null"
        ]
    },
    "checkver": {
        "url": "https://zoom.us/download",
        "regex": "ZoomOutlookPluginSetup\\.msi(?s:.)*?Version ([\\d.]+)"
