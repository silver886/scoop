{
   "$schema": "https://raw.githubusercontent.com/lukesampson/scoop/master/schema.json",
   "version": "2.1.39",
   "description": "An agentic coding tool that lives in your terminal, understands your codebase, and helps you code faster by executing routine tasks, explaining complex code, and handling git workflows -- all through natural language commands.",
   "homepage": "https://github.com/anthropics/claude-code",
   "license": {
      "identifier": "Proprietary",
      "url": "https://github.com/anthropics/claude-code/blob/master/LICENSE.md"
   },
   "suggest": {
      "Git for Windows": "main/git",
      "MSYS2": "main/msys2"
   },
   "url": "https://storage.googleapis.com/claude-code-dist-86c565f3-f756-42ad-8dfa-d59b1c096819/claude-code-releases/2.1.39/win32-x64/claude.exe",
   "hash": "f0357538ba50c80d02deb44a9aa4e02e577b34158284edeca99f5d9ba1183fc9",
   "installer": {
      "script": [
         "if (where.exe /q bash || $true) {",
         "   error 'Bash should be installed'",
         "}"
      ]
   },
   "bin": "claude.exe",
   "persist": "config",
   "env_set": {
      "CLAUDE_CODE_GIT_BASH_PATH": "$(((where.exe bash) -split '\\n')[0])",
      "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
      "DISABLE_AUTOUPDATER": "1",
      "DISABLE_BUG_COMMAND": "1",
      "DISABLE_ERROR_REPORTING": "1",
      "DISABLE_TELEMETRY": "1",
      "CLAUDE_CONFIG_DIR": "$dir\\config"
   },
   "checkver": {
      "url": "https://storage.googleapis.com/claude-code-dist-86c565f3-f756-42ad-8dfa-d59b1c096819/claude-code-releases/stable",
      "regex": "([\\d.]+)"
   },
   "autoupdate": {
      "url": "https://storage.googleapis.com/claude-code-dist-86c565f3-f756-42ad-8dfa-d59b1c096819/claude-code-releases/$version/win32-x64/claude.exe",
      "hash": {
         "url": "https://storage.googleapis.com/claude-code-dist-86c565f3-f756-42ad-8dfa-d59b1c096819/claude-code-releases/$version/manifest.json",
         "jsonpath": "$.platforms.win32-x64.checksum"
      }
   }
}
